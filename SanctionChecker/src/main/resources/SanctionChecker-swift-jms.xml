		</property>
		
		<property name="finalHitQueue" >
			<ref local="FinalHitQueueJMS"/>
		</property>
		
		<property name="backlogQueue" >
			<ref local="BacklogQueueJMS"/>
		</property>
		
		<!-- field colors -->
		<property name="fieldColors" >
			<map>
				<entry key="UNCHECKED" value="#EBE9DA"/>
