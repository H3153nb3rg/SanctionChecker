<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- Queue Definitions -->
	
	<bean id="GloablFileQueueConfig" abstract="true" init-method="initialize" destroy-method="close">
		<property name="basePath" value="C:\\temp\\SanctionTest\\queues\\swift"/>
		<property name="capacity" value="1234"	   	 />		
		<property name="streamName" value="Swift"/>		
	</bean>
	
	<bean id="InputQueueFile" class="at.jps.sanction.core.queue.file.FileInputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="InputQueue"/>		
	</bean>
	
	<bean id="DefectQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="DefectQueue"/>		
	</bean>
	
	<bean id="HitQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="HitQueue"/>		
	</bean>
	
	<bean id="NoHitQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="NoHitQueue"/>		
	</bean>
	
	<bean id="PostHitQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="PostHitQueue"/>		
	</bean>
	
	<bean id="PostNoHitQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="PostNoHitQueue"/>		
	</bean>
	
	<bean id="FinalNoHitQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="FinalNoHitQueue"/>		
	</bean>
	
	<bean id="FinalHitQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="FinalHitQueue"/>		
	</bean>

	<bean id="BacklogQueueFile" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfig" scope="singleton" lazy-init="true">		
		<property name="name" value="BacklogQueue"/>		
	</bean>
	
	
    <bean id="JMXAMQClientAdapter" class="at.jps.sanction.core.monitoring.jmx.JMXAMQClient" scope="singleton" lazy-init="true">		
		<property name="JMXServerUrl" value="service:jmx:rmi:///jndi/rmi://localhost:1616/jmxrmi"/>		
		<property name="objectName" value="org.apache.activemq:BrokerName=localhost,Type=Broker"/>		
	</bean>
	
    <bean id="JMXClientAdapter" class="at.jps.sanction.core.monitoring.jmx.JMXClient"  scope="singleton" lazy-init="true">		
		<property name="JMXServerUrl" value="service:jmx:rmi:///jndi/rmi://localhost:1234/jmxrmi"/>		
		<property name="objectName" value="Embargo:name=Queues"/>		
	</bean>
</beans>