<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- Queue Definitions -->
	<!-- for one stream -->
	<bean id="GloablFileQueueConfigSEPA" abstract="true" init-method="initialize" destroy-method="close">
		<property name="basePath" value="${Queue.Folder}\\sepa"/>
		<property name="capacity" value="1234"	   	 />				
		<!-- property name="purgeQueuesOnStartup" value="true"/-->
	</bean>
	
	<bean id="InputQueue-SEPA" class="at.jps.sanction.core.queue.file.FileInputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="InputQueue"/>		
	</bean>
	
	<bean id="DefectQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="DefectQueue"/>		
	</bean>
	
	<bean id="HitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="HitQueue"/>		
	</bean>
	
	<bean id="NoHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="NoHitQueue"/>		
	</bean>
	
	<bean id="PostHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="PostHitQueue"/>		
	</bean>
	
	<bean id="PostNoHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="PostNoHitQueue"/>		
	</bean>
	
	<bean id="FinalNoHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="FinalNoHitQueue"/>		
	</bean>
	
	<bean id="FinalHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="FinalHitQueue"/>		
	</bean>
	
	<bean id="OutNoHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="OutNoHitQueue"/>		
	</bean>
	
	<bean id="OutHitQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="OutHitQueue"/>		
	</bean>
	
	<bean id="BacklogQueue-SEPA" class="at.jps.sanction.core.queue.file.FileOutputQueue" init-method="initialize" destroy-method="close" parent="GloablFileQueueConfigSEPA" scope="singleton" lazy-init="true">		
		<property name="name" value="BacklogQueue"/>		
	</bean>
		
	
	<!-- JMX Adapters for monitoring -->
	<!-- only once per installation !! 
    <bean id="JMXAMQClientAdapter" class="at.jps.sanction.core.monitoring.jmx.JMXAMQClient" scope="singleton" lazy-init="true">		
		<property name="JMXServerUrl" value="service:jmx:rmi:///jndi/rmi://localhost:1616/jmxrmi"/>		
		<property name="objectName" value="org.apache.activemq:BrokerName=localhost,Type=Broker"/>		
	</bean>
	
    <bean id="JMXClientAdapter" class="at.jps.sanction.core.monitoring.jmx.JMXClient"  scope="singleton" lazy-init="true">		
		<property name="JMXServerUrl" value="service:jmx:rmi:///jndi/rmi://localhost:1234/jmxrmi"/>		
		<property name="objectName" value="Embargo:name=Queues"/>		
	</bean>
	-->
	
</beans>